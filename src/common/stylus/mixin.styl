   width: $width*3;/* no*/
// 居中, Flex 方式
centerFlex($flex)
  display: $flex
  align-items: center
  justify-content: center

// 居中, CSS3 平移方式, 兼容性不行
centerTranslate($translate)
  position: absolute
  top: 50%
  left: 50%
  transform: $translate(-50%, -50%)

// 用 max-width 来防止图片撑破容器
max-img()
  display: block
  max-width: 100%
  height: auto
// 多个子项布局
list($floatLeft, w=25%)
  float: $floatLeft
  width: w
list($inlineBlock, w=25%)
  display: $inlineBlock
  width: w
list(num)
  flex: num
  text-align :center
//panel
panel($bgcolor=#fff,$padding=0,$margin=10px 0,$height=60px,$txtPadding=0 32px,$color=#333,$fontSize=18px)
  background: $bgcolor
  padding: $padding
  margin: $margin
  >h4
    height: $height
    line-height: $height
    padding: $txtPadding
    font-weight :700
    no-wrap()
    text-align: center
    color: $color
    font-size: $fontSize

