//1px线

border-1px($color)
  position: relative
  &:after
    display: block
    position: absolute
    left: 0
    bottom: 0
    width: 100%
    border-top: 1px solid $color
    content: ''

border-none()
  &:after
    display: none

//背景图片
bg-image($url)
  background-image: url($url + "@2x.png")
  @media (-webkit-min-device-pixel-ratio: 3),(min-device-aspect-ratio: 3)
    background-image: url($url + "@3x.png")

//不换行
no-wrap()
  text-overflow: ellipsis
  overflow: hidden
  white-space: nowrap

//扩展点击区域
extent-click()
  position: relative
  &:before
    content: ''
    position: absolute
    top: -10px
    left: -10px
    right: -10px
    bottom: -10px

//字号自动调整
font-dpr($font-size)
  /*no*/
  [data-dpr="1"] &
    font-size: $font-size* 1;/* no*/
  /*no*/
  [data-dpr="2"] &
    font-size: $font-size* 2;/* no*/
  /*no*/
  [data-dpr="3"] &
    font-size: $font-size*3;/* no*/
